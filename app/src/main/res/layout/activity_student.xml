<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="                                    WELCOME"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"

        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/upload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="100dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:text="Upload Documents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/intern"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="102dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:text="Check Intern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/events"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="104dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:text="Check Events"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intern"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/mess"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="108dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:text="Check Mess Bill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/events"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/placements"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="8dp"
        android:text="Check Placements"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mess"
        app:layout_constraintVertical_bias="0.207" />

    <Button
        android:id="@+id/go_to_map"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="8dp"
        android:text="GO to Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placements"
        app:layout_constraintVertical_bias="0.242" />

</android.support.constraint.ConstraintLayout>
