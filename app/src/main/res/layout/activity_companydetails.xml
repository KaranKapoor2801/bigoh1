<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".companydetails">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="COMPANY DETAILS"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_teacher"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:id="@+id/companyname"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="120dp"
        android:hint="name"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_teacher"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:id="@+id/companylocation"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="120dp"
        android:hint="location"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_teacher"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:id="@+id/companyprofile"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="120dp"
        android:hint="Profile"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_teacher"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:id="@+id/companystipined"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="120dp"
        android:hint="Stipined"/>
    <Button
        android:id="@+id/companysubmit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="150dp"
        android:text="SUBMIT"/>
</android.widget.RelativeLayout>
